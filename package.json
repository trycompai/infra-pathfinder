{
  "name": "pathfinder",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "infra:install": "cd apps/infra && pnpm install",
    "infra:preview": "cd apps/infra && pulumi preview",
    "infra:up": "cd apps/infra && pulumi up",
    "infra:destroy": "cd apps/infra && pulumi destroy"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  }
}
